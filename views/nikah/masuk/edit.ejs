            <label for="nikibpr" class="form-label">NIK</label>
            <input type="text" name="nikibpr" id="nikibpr" list="listibpr" class="form-control"
                   <% if(datanikah.datapr.nikib){ %>value="<%= datanikah.datapr.nikib %>"
                    <% } %>
