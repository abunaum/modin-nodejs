    <center>
        <button type="submit" class="mb-3 btn btn-success">Simpan</button>
    </center>
</form>
<%- include('../../template/footer') %>
<script>
    $(document).ready(function () {
        $("#noaclkdiv").hide();
        $("#ayahprmatidiv").hide();
        $("#ibuprmatidiv").hide();
        $("#sttkeldesdiv").hide();
        $("#ayahlkmatidiv").hide();
