<!-- Modal -->
<div class="modal fade" style="z-index: 100001 !important;" id="tambahModal" tabindex="-1"
     aria-labelledby="tambahModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tambahModalLabel">Tambah Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/tambah-person" method="post">
                    <div class="mb-3 input-group input-group-outline">
                        <label for="nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" id="nama" name="nama">
                    </div>
                    <div class="mb-3 input-group input-group-outline">
                        <label for="nik" class="form-label">NIK</label>
                        <input type="number" class="form-control" id="nik" name="nik">
                    </div>
                    <div class="mb-3 input-group input-group-outline row">
                        <div class="col-6">
                            <label for="jk" class="form-label">Jenis kelamin</label>
                        </div>
                        <div class="col-6 input-group-outline">
                            <select class="form-select input-group-outline" id="jk" name="jk">
                                <option value="lk">Laki - Laki</option>
                                <option value="pr">Perempuan</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 input-group input-group-outline is-filled">
                        <label for="tempatlahir" class="form-label">TTL</label>
                        <input type="text" class="form-control input-group-outline" id="tempatlahir" name="tempatlahir" value="Probolinggo">
                        <input type="date" class="form-control input-group-outline" id="tgllahirpr" name="tgllahir">
                    </div>
                    <div class="mb-3 input-group input-group-outline is-filled">
                        <label for="kerja" class="form-label">Pekerjaan</label>
                        <input type="text" class="form-control" id="kerja" name="kerja" value="Wiraswasta">
                    </div>
                    <div class="mb-3 input-group input-group-outline is-filled">
                            <label for="agama" class="form-label">Agama</label>
                            <input type="text" class="form-control" id="agama" name="agama" value="ISLAM">
                    </div>
                    <div class="mb-3 input-group input-group-outline is-filled">
                            <label for="wn" class="form-label">Kewarganegaraan</label>
                            <input type="text" class="form-control" id="wn" name="wn" value="WNI">
                    </div>
                    <div class="mb-3 input-group">
                        <div class="col-sm-4">
                            <select class="form-select" aria-label="Provinsi" name="provinsi" id="provinsi"
                                    onchange="cekkab()">
                                <option value="">Provinsi</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select" aria-label="kabkot" name="kabkot" id="kabkot"
                                    onchange="cekkec()">
                                <option value="">Kabupaten / Kota</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select" aria-label="kec" name="kec" id="kec" onchange="cekdes()">
                                <option value="">Kecamatan</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 input-group input-group-outline">
                        <label for="des" class="form-label"></label>
                        <div class="col-sm-4">
                            <select class="form-select" aria-label="des" name="des" id="des">
                                <option value="">Kelurahan / Desa</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <select class="form-select" aria-label="rt" name="rt" id="rt">
                                <option value='1'>RT 1</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <select class="form-select" aria-label="rw" name="rw" id="rw">
                                <option value='1'>RW 1</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="alamat" name="alamat"
                                   placeholder="Dusun / Jalan">
                        </div>
                    </div>
                    <hr>
                    <center>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">Batal
                        </button>
                        <button type="submit" class="btn btn-success">Simpan</button>
                    </center>
                </form>
            </div>
        </div>
    </div>
</div>
